<div class="filters-controls hide-for-mediumlarge">
  <button data-open="filter-box" class="filters-controls__trigger" aria-controls="filter-box" aria-haspopup="dialog">
    <%= t ".filters_small_view.filter" %>
    <%= icon "caret-bottom", class: "icon--small float-right", aria_label: t(".filters_small_view.unfold"), role: "img" %>
  </button>
</div>

<div class="reveal" id="filter-box" data-reveal role="dialog" aria-modal="true" aria-labelledby="filter-box-label">
  <div class="reveal__header">
    <h3 id="filter-box-label" class="reveal__title"><%= t ".filters_small_view.filter_by" %>:</h3>
    <button class="close-button" data-close aria-label="<%= t(".filters_small_view.close_modal") %>" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="filters">
    <%= render partial: "decidim/shared/homepage_proposals/filters", locals: { type: :small } %>
  </div>
</div>
